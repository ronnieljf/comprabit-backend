  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "host": "localhost:3300",
  "basePath": "/api/v1",
  "paths": {
    "/user/register-user": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a user with username, email and password",
        "description": "Register a user",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Register a user",
            "required": true,
            "schema": {
              "type": "object",
              "$ref": "#/definitions/UserRegister"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/UserRegisterResponse"
            }
          },
          "401": {
            "description": "UNAUTHORIZED",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Generate token by email and password",
        "description": "Login token",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Generate token login",
            "required": true,
            "schema": {
              "type": "object",
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/LoginResponse"
            }
          },
          "401": {
            "description": "UNAUTHORIZED",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/user": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get user data by token",
        "description": "Get user data",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "authorization",
            "description": "authorization",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/LoginResponse"
            }
          },
          "400": {
            "description": "BAD_REQUEST",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/Error"
            }
          },
          "401": {
            "description": "UNAUTHORIZED",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserRegister": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "example@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "1234567"
        }
      }
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "example@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "1234567"
        }
      }
    },
    "LoginResponse": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2MzZlY2NiNmFlOTZhNjcwZDY4YzY1MjciLCJlbWFpbCI6Im5haTVAZ21haWwuY29tIiwidXNlcm5hbWUiOiJuYWk1IiwiaWF0IjoxNjc4NTgyMjEyLCJleHAiOjE2Nzg3NTUwMTJ9.fUmw3cTRLQrSK1eYnpUyVDji9cX3KcTiKEM2NYcC-ho"
        }
      }
    },
    "UserData": {
      "type": "object",
      "properties": {
        "email_confirmation_token_expired": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "comments": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "example": []
        },
        "active": {
          "type": "boolean"
        },
        "email_confirmation": {
          "type": "boolean"
        },
        "email_confirmation_token": {
          "type": "string"
        },
        "email_confirmation_at": {
          "type": "date"
        },
        "dob": {
          "type": "date"
        },
        "wallets": {
          "type": "array",
          "example": []
        },
        "created_at": {
          "type": "date"
        },
        "updated_at": {
          "type": "date"
        },
        "id": {
          "type": "string"
        }
      }
    },
    "UserRegisterResponse": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "example@gmail.com"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "example": "Invalid Username"
        },
        "message": {
          "type": "string",
          "example": "Username already exist"
        }
      }
    }
  }
}
